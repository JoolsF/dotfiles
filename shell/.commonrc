# Common config for all shells across all machines

# ALIASES 
# Programs
alias bat="batcat"
alias xcopy="xclip -sel clip"
alias xpaste="xclip -out -selection clipboard"

# Shortcuts
alias install="sudo apt update -y && sudo apt install"
alias uninstall="sudo apt --purge remove"
alias google="~/bin/google.sh"

# Git
alias gcom="git checkout master"
alias gcomp="git checkout master && git pull"
alias gco="git checkout"
alias gcob="git checkout -b"
alias gco.="git checkout ."
alias gst="git status"
alias gbr="git branch"
alias gdi="git diff"
alias gsh="git show"

alias git-save="git add . && git commit -m "update" && git push"

# PATH
export PATH="$HOME/bin:$PATH"

